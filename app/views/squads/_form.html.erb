<%#= @squad.members.each { |m| p m.inspect } %>
<h3 class="formation_title">Choose formation:</h3>
<div class="form_block_input">
  <select id="formation" name="formation">
    <option value="343">3-4-3</option>
    <option value="352">3-5-2</option>
    <option value="442">4-4-2</option>
    <option value="433">4-3-3</option>
    <option value="451">4-5-1</option>
    <option value="532">5-3-2</option>
    <option value="541">5-4-1</option>
  </select>
</div>

<h3 class="players_title">Select players:</h3>
<div class="players_form">
  <%= form_for(@squad) do |f| %>

    <div class="main_form">
      <%= simple_fields_for :members do |o| %>
        <div class="member_input fw">
          <% 3.times.each_with_index do |_val, index| %>
            <div class="member-container">
              <div class="image-container"></div>
              <%= o.collection_select "id3#{index}", @fw, :id, :name, include_blank: true %>
            </div>
          <% end %>
        </div>

        <div class="member_input mf">
          <% 5.times.each_with_index do |_val, index| %>
            <div class="member-container">
              <div class="image-container"></div>
              <%= o.collection_select "id2#{index}", @mf, :id, :name, include_blank: true %>
            </div>
          <% end %>
        </div>

        <div class="member_input df">
          <% 5.times.each_with_index do |_val, index| %>
            <div class="member-container">
              <div class="image-container"></div>
              <%= o.collection_select "id1#{index}", @df, :id, :name, include_blank: true %>
            </div>
          <% end %>
        </div>

        <div class="member_input gk">
          <div class="member-container">
            <div class="image-container"></div>
            <%= o.collection_select :id0, @gk, :id, :name, include_blank: true %>
          </div>
        </div>
      <% end %>
    </div>

    <h3>Select reserve players:</h3>
    <div id="reserve_form" class="member_input">
      <%= simple_fields_for :reserve, input_html: {class: 'reserve'} do |o| %>
        <% 7.times.each_with_index do |_val, index| %>
          <div class="member-container">
            <div class="image-container"></div>
            <%= o.collection_select "id#{index}", @players,:id,:name, include_blank: true, required: true %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div id="squad_approve_btn" class="actions">
      <%= f.submit 'Approve squad' %>
    </div>
  <% end %>
</div>
