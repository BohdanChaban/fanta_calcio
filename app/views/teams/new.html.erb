<%= form_for @team, local: true do |form| %>
  <%- if @team.errors.any? %>
    <div class="errors">
      <h2>
        <%= error_messages_for(@team) %>
      </h2>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>