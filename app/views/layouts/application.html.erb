<!DOCTYPE html>
<html>
  <head>
    <title>FantaCalcio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">

    <script>
      window.onresize = displayWindowSize;
      window.onload = displayWindowSize;

      function displayWindowSize() {
        myWidth = window.innerWidth;
        myHeight = window.innerHeight;
        // your size calculation code here
        document.getElementById("dimensions").innerHTML = myWidth + "x" + myHeight;
      };
    </script>
  </head>

  <body>
    <nav class="main-nav">
      <%= render 'layouts/navigation' %>
    </nav>
    <main class="main">
      <div class="container main">
        <% if flash.present? %>
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %> alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= value %>
            </div>
          <% end %>
        <% end %>
        <h2 id="dimensions"></h2>
        <%= yield %>
      </div>
    </main>
    <footer class="footer">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
